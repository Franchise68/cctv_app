QMainWindow { background: #f5f5f5; color: #222; }
QLabel { color: #222; }
QToolBar { background: #ffffff; border: none; }
QPushButton { background: #ffffff; color: #222; border: 1px solid #ccc; border-radius: 6px; padding: 6px 10px; }
QPushButton:hover { background: #f0f0f0; }
QPushButton:pressed { background: #e8e8e8; }
QLineEdit { background: #ffffff; color: #222; border: 1px solid #ccc; border-radius: 6px; padding: 6px; }
QComboBox { background: #ffffff; color: #222; border: 1px solid #ccc; border-radius: 6px; padding: 4px; }
